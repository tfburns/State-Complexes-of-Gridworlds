#:kivy 1.11.1

<ToggleButton>:
    on_state: app.root.on_state(self)

<Boxes>:
    boxes: _boxes
    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'top'
        ScreenManager:
            size_hint: 1, .9
            id: _screen_manager
            Screen:
                name: 'grid'
                BoxLayout:
                    orientation: 'vertical'
                    padding: 50
                    id: _boxes
            Screen:
                name: 'options'
                GridLayout:
                    cols: 2
                    padding: 50
                    Button:
                        on_release: root.CreateWorldGraph()
                        text: 'Create & Save World Graph'
                        size_hint: .5, .1
                    ToggleButtons:

    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'bottom'
        BoxLayout:
            orientation: 'horizontal'
            size_hint: 1, .1
            Button:
                text: 'Grid View'
                on_press: _screen_manager.current = 'grid'
            Button:
                text: 'Options'
                on_press: _screen_manager.current = 'options'
